@model List<AbendLog.BusinessAccess.Model.AbendLogData>
@{
    ViewData["Title"] = "Production Email";
    Layout = "~/Views/Shared/_LayoutAbend.cshtml";
}
<script src="~/Scripts/jquery-1.11.0.min.js"></script>
<script src="~/Scripts/clipboard.min.js"></script>
<script src="~/Scripts/jquery_Email.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#divLoading").hide();
    });

    $(function () {
        new Clipboard('.copy-button');
    })
</script>
<br />
<br />
<div class="panel-group">
    <div class="panel panel-primary">
        <div class="panel-heading">Abend Log Model Email Generation</div>
        <div class="panel-body">
            <div id="main">
                <div class="container">
                    <br />
                    <br />
                    <br />
                    Hi Team,
                    <br />
                    <br />
                    Please find the below status of the production as of now.
                </div>
                <br />
                <div class="table-responsive">
                    <table style="border:1px Solid black" class="table">
                        <thead>
                            <tr>
                                <th style="border:1px Solid black;text-align:center" colspan="4">JOB ABENDED IN PRODUCTION</th>
                            </tr>
                        </thead>
                        <thead>
                            <tr>

                                <th style="border:1px Solid black">Incident</th>
                                <th style="border:1px Solid black">Other Details</th>
                                <th style="border:1px Solid black">Solution</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>

                                    <td style="border:1px Solid black;word-break:break-all;">@Model[i].IncidentNumber</td>
                                    <td style="border:1px Solid black;word-break:break-all;">
                                        <b>Job Name:</b> @Model[i].JobName<br>
                                        <b>Abend Code:</b> @Model[i].AbendCode<br>
                                        <b>Step Name:</b> @Model[i].StepName<br>
                                        <b>Abend Time:</b> @Model[i].AbendTime<br>
                                        <b>Abend Description:</b> @Model[i].AbendDescription<br>
                                        <b>RCA:</b>@Model[i].RCA
                                    </td>
                                    <td style="border:1px Solid black;word-break:break-all;">@Model[i].Solution</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <button class='copy-button' data-clipboard-target='#main'>Copy Production Data</button>
        </div>
    </div>
</div>
